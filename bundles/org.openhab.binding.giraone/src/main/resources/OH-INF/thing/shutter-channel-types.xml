<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="giraone"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<channel-type id="shutter-position">
		<item-type>Number:Dimensionless</item-type>
		<label>Shutter Position</label>
		<description>Shutter Blind Level Position</description>
		<tags>
			<tag>Control</tag>
			<tag>Level</tag>
		</tags>
		<state min="0" step="1" max="100" pattern="%.0f %%"/>
	</channel-type>

	<channel-type id="shutter-slat-position">
		<item-type>Number:Dimensionless</item-type>
		<label>Slat Position</label>
		<description>Shutter Slat Position</description>
		<tags>
			<tag>Control</tag>
			<tag>Level</tag>
		</tags>
		<state min="0" step="1" max="100" pattern="%.0f %%"/>
	</channel-type>

	<channel-type id="shutter-motion-state">
		<item-type>String</item-type>
		<label>Shutter Motion State</label>
		<description>Describes the Shutter's motion state (moving up/down or stopped).</description>
		<tags>
			<tag>Status</tag>
		</tags>
		<state readOnly="true">
			<options>
				<option value="HALTED">Halted</option>
				<option value="MOVING">Moving</option>
				<option value="MOVING_UP">Moving Up</option>
				<option value="MOVING_DOWN">Moving Down</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="shutter-state">
		<item-type>String</item-type>
		<label>Shutter State</label>
		<description>Describes if the Shutter or Window is opened or closed</description>
		<tags>
			<tag>Status</tag>
		</tags>
		<state readOnly="true">
			<options>
				<option value="OPEN">Open</option>
				<option value="CLOSED">Closed</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="shutter-up-down">
		<item-type>Rollershutter</item-type>
		<label>Move Up or Down</label>
		<description>Move the Shutter Level Up or Down</description>
		<category>Rollershutter</category>
		<state>
			<options>
				<option value="UP">Up</option>
				<option value="DOWN">Down</option>
				<option value="UNDEFINED">Stop</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="shutter-step-up-down">
		<item-type>Number</item-type>
		<label>Step Up or Down</label>
		<description>Raise or Lower the Level Step by Step</description>
		<category>Rollershutter</category>
		<state/>
	</channel-type>

	<channel-type id="window-position">
		<item-type>Number</item-type>
		<label>Window Position</label>
		<description>Window Position (0 = 0pen ... 100 = closed)</description>
		<tags>
			<tag>Control</tag>
			<tag>Level</tag>
		</tags>
		<state min="0" step="1" max="100" pattern="%.0f %%"/>
	</channel-type>

	<channel-type id="window-step-up-down">
		<item-type>Number</item-type>
		<label>Step Up or Down</label>
		<description>Raise or Lower the Window Position Step by Step</description>
		<category>Window</category>
		<state/>
	</channel-type>

	<channel-type id="window-up-down">
		<item-type>Number</item-type>
		<label>Move Up or Down</label>
		<description>Move the Window Position Up or Down</description>
		<category>Window</category>
		<state>
			<options>
				<option value="0">Close</option>
				<option value="1">Open</option>
				<option value="100">Open</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="window-motion-state">
		<item-type>String</item-type>
		<label>Window Motion State</label>
		<description>Describes the Windows's motion state (Opening/Closing/Halted).</description>
		<tags>
			<tag>Status</tag>
		</tags>
		<state readOnly="true">
			<options>
				<option value="HALTED">Halted</option>
				<option value="MOVING">Moving</option>
				<option value="MOVING_UP">Opening</option>
				<option value="MOVING_DOWN">Closing</option>
			</options>
		</state>
	</channel-type>

</thing:thing-descriptions>
